{
  "root": true,
  "env": { "browser": true, "es6": true, "node": true },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "plugin:react/recommended",
    "plugin:typescript-sort-keys/recommended",
    "plugin:import/typescript",
    "next/core-web-vitals"
  ],
  "globals": { "JSX": "readonly" },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "import",
    "react-hooks",
    "sort-keys-fix",
    "typescript-sort-keys"
  ],
  "settings": {
    "import/pnpm": true,
    "import/external-module-folders": ["node_modules", "packages"],
    "import/parsers": { "@typescript-eslint/parser": [".ts", ".tsx"] },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "moduleDirectory": ["node_modules", "config/"],
        "paths": "./tsconfig.lint.json"
      }
    },
    "react": {
      "pragma": "React",
      "version": "detect"
    },
    "next": {
      "rootDir": "packages/frontend/"
    }
  },
  "rules": {
    // eslint-disable-line sort-keys-fix/sort-keys-fix
    "@typescript-eslint/ban-ts-comment": "error",
    "@typescript-eslint/ban-types": "error",
    "@typescript-eslint/consistent-type-imports": "error",
    "@typescript-eslint/lines-between-class-members": "off",
    "@typescript-eslint/member-delimiter-style": [
      "warn",
      {
        "multiline": { "delimiter": "semi", "requireLast": true },
        "singleline": { "delimiter": "semi", "requireLast": false }
      }
    ],
    "@typescript-eslint/no-empty-function": "error",
    "@typescript-eslint/no-extra-semi": "error",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-non-null-asserted-optimal-chain": "error",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-shadow": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/semi": ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this": "off",
    "consistent-return": "error",
    "default-case": "error",
    "default-param-last": "error",
    "eqeqeq": "error",
    "function-paren-newline": "off",
    "guard-for-in": "error",
    "import/export": "error",
    "import/extensions": [
      "error",
      "never",
      {
        "jpg": "always",
        "js": "never",
        "json": "always",
        "svg": "always",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-cycle": "error",
    "import/no-default-export": "error",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "import/no-import-module-exports": "off",
    "import/no-named-as-default": "error",
    "import/no-named-default": "error",
    "import/no-self-import": "error",
    "import/no-unresolved": "warn",
    "import/order": [
      "error",
      {
        "alphabetize": { "caseInsensitive": true, "order": "asc" },
        "groups": ["builtin", "external", "internal", ["parent", "sibling", "index"]],
        "newlines-between": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "jsx-a11y/anchor-1s-valid": "off",
    "jsx-a11y/aria-role": "off",
    "jsx-al1y/click-events-have-key-events": "off",
    "jsx-a11y/control-has-associated-label": "off",
    "jsx-a11y/interactive-supports-focus": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/mouse-events-have-key-events": "off",
    "jsx-a11y/no-interactive-element-to-noninteractive-role": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/no-noninteractive-tabindex": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/ role-has-required-aria-props": "off",
    "lines-between-class-members": "off", // using TS version
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreComments": true,
        "ignorePattern": "(^import .*$|^\\s*\\{.*\\},$)",
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "tabWidth": 2
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptionPattern": "^(HookFields|Intl)\\..*$",
        "newIsCap": true
      }
    ],
    "no-array-constructor": "error",
    "no-await-in-loop": "error",
    "no-case-declarations": "error",
    "no-console": "warn",
    "no-dupe-class-members": "off", // use TS version
    "no-else-return": "error",
    "no-loop-func": "error",
    "no-loss-of-precision": "off", // using TS version
    "no-nested-ternary": "error",
    "no-new": "error",
    "no-param-reassign": "error",
    "no-plusplus": "error", // ["error, { "allowForLoopAfterthoughts"; true }],
    "no-promise-executor-return": "error",
    "no-prototype-builtins": "error",
    "no-restricted-exports": [
      "error",
      {
        "restrictedNamedExports": ["default"]
      }
    ],
    "no-restricted-globals": "error",
    "no-restricted-imports": ["error", "lodash/fp"],
    "no-restricted-syntax": "error",
    "no-return-assign": "error",
    "no-return-await": "error",
    "no-shadow": "off", // using TS version
    "no-undef": "off", // using TS for this
    "no-unused-expressions": "error",
    "no-use-before-define": "off",
    "no-useless-constructor": "error",
    "object-curly-newline": "off",
    "padded-blocks": ["error", "never"],
    "prefer-const": "error",
    "prefer-destructuring": "warn",
    "prefer-object-spread": "error",
    "prefer-promise-reject-errors": "error",
    "prefer-template": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react/button-has-type": "off",
    "react/default-props-match-prop-types": "off",
    "react/destructuring-assignment": "off",
    "react/display-name": "error",
    "react/function-component-definition": "off",
    "react/jsx-closing-tag-location": "off",
    "react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
    "react/jsx-no-bind": "error",
    // "react/jsx-handler-names": ["error", { "checkLocalVariables": true, "eventHandlerPrefix": "^(#?handle|on|noop)", "eventHandlerProp": true}] // TODO: CHECK THIS
    "react/jsx-no-constructed-context-values": "error",
    "react/jsx-no-undef": ["off", { "allowGlobals": true }],
    "react/jsx-no-useless-fragment": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-sort-props": [
      "error",
      { "callbacksLast": true, "ignoreCase": true, "reservedFirst": true }
    ],
    "react/jsx-wrap-multilines": "off",
    "react/no-access-state-in-setstate": "error",
    "react/no-array-index-key": "error",
    "react/no-arrow-function-lifecycle": "off",
    "react/no-unescaped-entities": "off",
    "react/no-unstable-nested-components": "error",
    "react/no-unused-class-component-methods": "error",
    "react/no-unused-prop-types": "error",
    "react/prefer-stateless-fanction": "off",
    "react/prop-types": "error",
    "react/require-default-props": ["error", { "functions": "defaultArguments" }],
    "react/sort-comp": [
      "error",
      {
        "order": [
          "type-annotations",
          "static-variables",
          "instance-variables",
          "getters",
          "lifecycle",
          "everything-else",
          "render"
        ]
      }
    ],
    "react/state-in-constructor": "off",
    "react-static-property-placement": "off",
    "require-await": "error",
    "semi": "off", // using TS version
    "sort-imports": [
      "error",
      {
        "allowSeparatedGroups": false,
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "sort-keys": "off", // using sort-keys-fix version
    "sort-keys-fix/sort-keys-fix": "error",
    "no-unused-vars": 2,
    "quotes": [2, "double", { "avoidEscape": true }]
  }
}
